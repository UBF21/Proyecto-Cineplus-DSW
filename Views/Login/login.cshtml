@model Cineplus_DSW_Proyecto.Models.Usuario

@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>

    <div class="container">
        <div class="row align-items-center vh-100 ">
            <div class="col-lg-5 mx-auto ">
                <div class="p-5 rounded shadow fondo-claro ">
                    <form asp-area="" asp-controller="Login" asp-action="login" method="post">
                        <div class="container">

                            <h2 class="text-center mb-3">Login</h2>

                            <div class="mb-3">

                                <div class="d-flex justify-content-lg-center">

                                    <div class="col-lg-10">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input class="form-control"
                                               placeholder="Email...." asp-for="email">
                                        <span asp-validation-for="email" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="mb-3">

                                <div class="d-flex justify-content-lg-center">
                                    <div class="col-lg-10">

                                        <input type="password" class="form-control"
                                               placeholder="Password..." asp-for="password">
                                        <span asp-validation-for="password" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="d-flex justify-content-lg-end">

                                <div class="col-lg-5 mr-2">
                                    <input type="submit"  class="btn btn-primary btn-lg" style="font-weight:bold" value="Login">
                                </div>
                            </div>


                            @if (@ViewBag.mensaje != null)
                            {
                                <div class="alert alert-danger col-lg-9 text-center mt-2" style="font-size:1.2rem;margin-left:35px">
                                    @ViewBag.mensaje
                                </div>
                            }


                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
