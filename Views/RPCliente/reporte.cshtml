@model IEnumerable<Cineplus_DSW_Proyecto.Models.Cliente>

@{
    ViewData["Title"] = "reporte";
}


<div class="row row align-items-center vh-500 mb-3">

    <div class="col-lg-7 mx-auto">
        <div class="container" style="margin-left:140px">
            <h1>Reporte de Clientes</h1>


            <form asp-controller="RPCliente" asp-action="reporte" method="get">
                <div class="row">

                    <div class="col-12">
                        <div class="form-group">

                            <label class="col-form-label" style="font-size:1.8rem">Estado :</label>
                            <br />

                            <div class="col-6">
                                <select name="estado" class="form-control">
                                    <option selected value="B">[Seleccionar]</option>
                                    <option value="A">Activo</option>
                                    <option value="I">Inactivo</option>
                                </select>

                            </div>
                            <span class="text-danger">@ViewBag.validacion</span>
                        </div>
                    </div>


                    <input type="submit" class="btn btn-primary btn-lg font-weight-bold" style="margin-left:178px" value="Consultar">


                </div>

            </form>
        </div>

    </div>

</div>

@if (Model.Count() != 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.estado)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.estado)
                    </td>

                </tr>
            }
        </tbody>
    </table>

     <div class="row">
        <div class="col-3" style="margin-left:950px">

            <a asp-controller="RPCliente" asp-action="reportePDF" class="btn btn-outline-secondary btn-lg font-weight-bold">Exportar PDF</a>
        </div>
    </div>
}
   
